<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Kalendarzyk.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Kalendarzyk.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Kalendarzyk">


    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Favorites">
            <ShellContent
                Title="AddNewEventTypePage"
                ContentTemplate="{DataTemplate local:AddNewEventTypePage}"
                Route="Faasdasd" />
            <ShellContent
                Title="AddNewEventGroupPage"
                ContentTemplate="{DataTemplate local:AddNewEventGroupPage}"
                Route="Daily Events" />
            <ShellContent
                Title="Admin page"
                ContentTemplate="{DataTemplate local:AdminPage}"
                Route="AdminPage" />

        </Tab>
    </FlyoutItem>



</Shell>